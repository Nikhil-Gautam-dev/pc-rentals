<header>
  <a href="/" class="logo"><span>PC</span>RENTALS</a>
  <div class="menu-icon" id="menu-icon">&#9776;</div>
  <div class="links" id="mobile-menu">
    <div class="links-container">
      <a href="/" class="header_link">Home</a>
      <a href="/about" class="header_link">About Us</a>
      <a href="/gallery" class="header_link">Gallery</a>
      <a href="/contact" class="header_link">Contact</a>
      <a href="/orders" class="header_link">orders</a>
    </div>
    <div class="action-btns">
      <div class="cta" id="cta">
        <button class="apply-btn" id="login">Login</button>
        <button class="contact-btn" id="signup">Signup</button>
      </div>
    </div>
  </div>
</header>

<script>
  import { getCookie } from "../utils/cookiesHandler.js";

  window.addEventListener("scroll", () => {
    const header = document.querySelector("header");
    if (window.scrollY > 0) {
      header.style.backgroundColor = "rgb(17, 10, 20, .75)";
    } else {
      header.style.backgroundColor = "#100914";
    }
  });

  document.getElementById("login").addEventListener("click", () => {
    window.location.href = "/login";
  });
  document.getElementById("signup").addEventListener("click", () => {
    window.location.href = "/signup";
  });

  document.getElementById("menu-icon").addEventListener("click", () => {
    const mobileMenu = document.getElementById("mobile-menu");
    mobileMenu.style.display =
      mobileMenu.style.display === "flex" ? "none" : "flex";
  });

  document.addEventListener("DOMContentLoaded", () => {
    const cta = document.getElementById("cta");

    if (document.location.href.includes("admin")) {
      cta.style.display = "none";
      return;
    }
    const token = getCookie("accessToken");

    if (token) {
      cta.style.display = "none";
    }
  });
</script>

