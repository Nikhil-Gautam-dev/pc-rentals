---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Contact Us";
---

<BaseLayout pageTitle={pageTitle}>
  <section class="contact-section">
    <div class="contact-info">
      <h1>Contact Us</h1>
      <p>
        We'd love to hear from you. Reach out via email, phone, or visit us at
        our office.
      </p>
      <ul>
        <li><strong>Email:</strong> info@pcrental.com</li>
        <li><strong>Phone:</strong> +91 12345 67890</li>
        <li><strong>Address:</strong> 123 PC Street, Tech City, India</li>
      </ul>
    </div>
    <div class="contact-form">
      <form>
        <label for="name">Name</label>
        <input id="name" type="text" placeholder="Your Name" required />

        <label for="email">Email</label>
        <input id="email" type="email" placeholder="Your Email" required />

        <label for="message">Message</label>
        <textarea id="message" rows="5" placeholder="Your Message" required
        ></textarea>

        <button type="submit">Send Message</button>
      </form>
    </div>
  </section>
</BaseLayout>

<style>
  .contact-section {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 2rem;
    padding: 6rem 4rem;
    background-color: #161026;
    color: #bdbdbd;
  }
  .contact-info,
  .contact-form {
    flex: 1 1 45%;
    min-width: 300px;
  }
  .contact-info h1 {
    color: #f7f7f7;
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }
  .contact-info p {
    font-size: 1.1rem;
    margin-bottom: 1rem;
  }
  .contact-info ul {
    list-style: none;
    padding: 0;
  }
  .contact-info li {
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }
  form {
    display: flex;
    flex-direction: column;
  }
  label {
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }
  input,
  textarea {
    padding: 1rem;
    border: 1px solid #2a2241;
    border-radius: 8px;
    background-color: #161026;
    color: #bdbdbd;
    margin-bottom: 1rem;
  }
  button {
    padding: 1rem;
    border: none;
    border-radius: 8px;
    background-color: #4caf50;
    color: white;
    cursor: pointer;
    font-size: 1rem;
    width: fit-content;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  button:hover {
    background-color: #43a047;
  }
  @media (max-width: 768px) {
    .contact-section {
      flex-direction: column;
      text-align: center;
      padding: 2rem 1rem;
    }
    .contact-info,
    .contact-form {
      flex: 1 1 100%;
    }
  }
</style>
